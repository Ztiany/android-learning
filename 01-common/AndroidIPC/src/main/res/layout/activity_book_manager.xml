<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ztiany.androidipc.activity.BookManagerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                style="@style/ConnButton"
                android:onClick="bindService"
                android:text="bindService" />

            <EditText
                android:id="@+id/id_act_book_id_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="书号"
                android:inputType="number" />

            <EditText
                android:id="@+id/id_act_book_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="书名" />

            <Button
                style="@style/ConnButton"
                android:onClick="addBook"
                android:text="addBook" />

            <Button
                style="@style/ConnButton"
                android:onClick="getBookList"
                android:text="getBookList" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
