<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ztiany.test.MainActivity">

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="recreate"
        android:text="recreate"
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="opActivityAnim"
        android:text="Activity Animation"
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openTint"
        android:text="Activity Tint"
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openTime"
        android:text="openTime  "
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openStatus"
        android:text="openStatus  "
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fragments"
        android:text="fragments"
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fragmentsViewPager"
        android:text="fragmentsViewPager"
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="makeANR"
        android:text="makeANR"
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openIntentTest"
        android:text="Intent Test"
        tools:ignore="HardcodedText" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openDeviceActivity"
        android:text="Device ID"
        tools:ignore="HardcodedText" />

</LinearLayout>
