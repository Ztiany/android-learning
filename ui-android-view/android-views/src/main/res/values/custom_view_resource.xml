<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <declare-styleable name="RulerView">
        <attr name="rv_indicateColor" format="color|reference" />
        <attr name="rv_selectedColor" format="color|reference" />
        <attr name="rv_textColor" format="color|reference" />
        <attr name="rv_textSize" format="dimension|reference" />
        <attr name="rv_begin" format="integer|reference" />
        <attr name="rv_end" format="integer|reference" />
        <attr name="rv_indicateWidth" format="dimension|reference" />
        <attr name="rv_indicatePadding" format="dimension|reference" />
    </declare-styleable>

    <!--自定义滚动尺-->
    <declare-styleable name="RulerWheel">
        <!--大号刻度线颜色-->
        <attr name="lineColorMax" format="color" />
        <!--中号刻度线颜色-->
        <attr name="lineColorMid" format="color" />
        <!--小号刻度线颜色-->
        <attr name="lineColorMin" format="color" />
        <!--大号刻度线的大小,优先级高于scaleWidth-->
        <attr name="MaxBarSize" format="dimension" />
        <!--中号刻度线的大小,优先级高于scaleWidth-->
        <attr name="MidBarSize" format="dimension" />
        <!--大号刻度线的大小,优先级高于scaleWidth-->
        <attr name="MinBarSize" format="dimension" />
        <!--刻度线高度百分比，相对于控件的高度-->
        <attr name="MaxScaleHeightPercent" format="float" />
        <attr name="MidScaleHeightPercent" format="float" />
        <attr name="MinScaleHeightPercent" format="float" />
        <!--是否显示刻度值-->
        <attr name="showScaleValue" format="boolean" />
        <!--是否渐显显示刻度尺-->
        <attr name="showGradient" format="boolean" />
        <!--刻度宽度,所有的都一样大小-->
        <attr name="scaleWidth" format="dimension" />
        <!--刻度左右间距-->
        <attr name="line_divider" format="dimension" />
        <!--tsizeDetailsize-->
        <attr name="text_Size" format="dimension" />
        <attr name="text_color" format="color" />
        <!--value-->
        <attr name="def_value" format="integer" />
        <attr name="max_value" format="integer" />
        <attr name="min_value" format="integer" />
        <!--刻度值渐现-->
        <attr name="scaleValueGradient" format="boolean" />
        <attr name="mode">
            <flag name="SCALE" value="0" />
            <flag name="HALF" value="1" />
            <flag name="TEN_ONE" value="2" />
        </attr>
        <attr name="alignMode">
            <flag name="UP" value="0" />
            <flag name="DOWN" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SquareEnhanceLayout">
        <attr name="sel_orientation" format="integer" />
        <attr name="sel_column" format="integer" />
        <attr name="sel_row" format="integer" />
    </declare-styleable>

    <declare-styleable name="MaterialEditText">
        <attr name="useFloatingLabel" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PercentLayout">
        <attr name="widthPercent" format="float" />
        <attr name="heightPercent" format="float" />
        <attr name="marginLeftPercent" format="float" />
        <attr name="marginRightPercent" format="float" />
        <attr name="marginTopPercent" format="float" />
        <attr name="marginBottomPercent" format="float" />
    </declare-styleable>

    <declare-styleable name="ColorChangeTextView">
        <attr name="cctv_text" format="string|reference" />
        <attr name="cctv_text_size" format="dimension" />
        <attr name="cctv_text_color" format="color|reference" />
        <attr name="cctv_text_color_change" format="color|reference" />
        <attr name="cctv_progress" format="float" />
        <attr name="cctv_direction">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

</resources>