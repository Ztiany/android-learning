<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:ignore="HardcodedText">

    <com.ztiany.view.draw.camera.CameraDemoView
        android:id="@+id/camera_demo_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="40dp"
        android:layout_weight="1" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="rotate X"
            android:textColor="@color/black" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="rotate Y"
            android:textColor="@color/black" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="rotate Z"
            android:textColor="@color/black" />

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="translate Z"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/add_rotate_x"
            android:layout_row="0"
            android:layout_column="1"
            android:text="  +   " />

        <Button
            android:id="@+id/add_rotate_y"
            android:layout_row="1"
            android:layout_column="1"
            android:text="  +   " />

        <Button
            android:id="@+id/add_rotate_z"
            android:layout_row="2"
            android:layout_column="1"
            android:text="  +   " />

        <Button
            android:id="@+id/add_rotate_tz"
            android:layout_row="3"
            android:layout_column="1"
            android:text="  +   " />

        <Button
            android:id="@+id/sub_rotate_x"
            android:layout_row="0"
            android:layout_column="3"
            android:text="  -   " />

        <Button
            android:id="@+id/sub_rotate_y"
            android:layout_row="1"
            android:layout_column="3"
            android:text="  -   " />

        <Button
            android:id="@+id/sub_rotate_z"
            android:layout_row="2"
            android:layout_column="3"
            android:text="  -   " />

        <Button
            android:id="@+id/sub_rotate_tz"
            android:layout_row="3"
            android:layout_column="3"
            android:text="  -   " />

        <TextView
            android:id="@+id/camera_rotate_x"
            android:layout_row="0"
            android:layout_column="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0" />

        <TextView
            android:id="@+id/camera_rotate_y"
            android:layout_row="1"
            android:layout_column="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0" />

        <TextView
            android:id="@+id/camera_rotate_z"
            android:layout_row="2"
            android:layout_column="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0" />

        <TextView
            android:id="@+id/camera_rotate_tz"
            android:layout_row="3"
            android:layout_column="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="-8" />

        <Button
            android:id="@+id/reset"
            android:layout_row="4"
            android:layout_column="0"
            android:text="reset" />

        <Button
            android:id="@+id/matrix_canvas"
            android:layout_row="4"
            android:layout_column="1"
            android:text="matrix canvas" />

        <Button
            android:id="@+id/matrix_bitmap"
            android:layout_row="4"
            android:layout_column="2"
            android:text="matrix bitmap" />

    </GridLayout>

</LinearLayout>