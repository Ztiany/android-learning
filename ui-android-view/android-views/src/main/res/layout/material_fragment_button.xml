<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a Button"
            app:icon="@drawable/rv_ic_item_touch"
            app:iconSize="20dp"
            app:iconTint="@color/red" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a Button"
            app:shapeAppearance="@style/StyleShapeable_Rounded10" />

        <!-- 注意这里 padding 的数值是描边宽度的一半 -->
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="I am a Button"
            app:shapeAppearance="@style/StyleShapeable_Cut10"
            app:strokeColor="@color/red"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="I am a Button"
            app:shapeAppearance="@style/StyleShapeable_Cut50Percent"
            app:strokeColor="@color/red"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="I am a Button"
            app:shapeAppearance="@style/StyleShapeable_Leaf"
            app:strokeColor="@color/red"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="I am a Button"
            app:shapeAppearance="@style/StyleShapeable_TopCircle"
            app:strokeColor="@color/red"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:text="I am a Button"
            app:shapeAppearance="@style/StyleShapeable_Hexagon"
            app:strokeColor="@color/red"
            app:strokeWidth="4dp" />

    </LinearLayout>

</ScrollView>